source 'https://rubygems.org'

ruby '2.5.1'

gem 'require_all'
gem 'activesupport'

# Previous releases of statsample overrode the definition of Array#sum with dodgy results
# Master currently has a fix...
gem 'statsample', git: 'https://github.com/SciRuby/statsample', branch: 'master', ref: 'fd9a88d92196fc419e8080f0989faf6fe9563e80'
gem 'mechanize'
gem 'write_xlsx'
gem 'roo'
gem 'roo-xls'
gem 'html-table'
gem 'interpolate'
gem 'ruby-sun-times'
gem 'soda-ruby', require: 'soda'
gem 'structured_warnings'
gem 'chroma'

# Useful for debugging
gem 'pry-byebug'
gem 'hashdiff'

# For profiling code
gem 'ruby-prof'

# For tests
gem 'rspec'
